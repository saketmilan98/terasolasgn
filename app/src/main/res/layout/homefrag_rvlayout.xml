<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl1_hfrvl"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv1_hfrvl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/placeholder_image"
            android:adjustViewBounds="true"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv1_hfrvl"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv1_hfrvl"
            app:layout_constraintEnd_toStartOf="@+id/tv3_hfrvl"
            android:layout_margin="10dp"
            tools:text="Rush (2013)"
            android:textColor="@color/blue"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv2_hfrvl"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv1_hfrvl"
            app:layout_constraintStart_toEndOf="@+id/iv1_hfrvl"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="Rank 100 | 142 min | Drama"
            android:textColor="@color/green"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv3_hfrvl"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/tv1_hfrvl"
            app:layout_constraintBottom_toBottomOf="@+id/tv1_hfrvl"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="9.2"
            android:textColor="@color/black"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_baseline_star_rate_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv4_hfrvl"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv2_hfrvl"
            app:layout_constraintStart_toEndOf="@+id/iv1_hfrvl"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="Two imprisoned men bond over a number of years, finding solace and eventual redemption through acts of common decency."
            android:textColor="@color/gray"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv5_hfrvl"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv4_hfrvl"
            app:layout_constraintStart_toEndOf="@+id/iv1_hfrvl"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="Director: Frank Darabont\nStars: Tim Robbins, Morgan Freeman, Bob Gunton, William Sadler"
            android:textColor="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1_hfrvl"
        android:background="#4c313131"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cl1_hfrvl"
        />

</androidx.constraintlayout.widget.ConstraintLayout>